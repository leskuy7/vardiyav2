{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "nixpacks",
        "buildCommand": "npm install && npm run -w @vardiya/api build"
    },
    "deploy": {
        "startCommand": "npm run -w @vardiya/api start:prod",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}